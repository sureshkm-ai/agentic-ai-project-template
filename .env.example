# =============================================================================
# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Project Settings
# -----------------------------------------------------------------------------
PROJECT_NAME=project-name
ENVIRONMENT=development  # development | staging | production
DEBUG=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# LLM Provider API Keys (Choose at least one)
# -----------------------------------------------------------------------------

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google (for Vertex AI)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/gcp-key.json
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
VERTEX_AI_MODEL=gemini-pro

# Azure OpenAI
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT=your-deployment-name

# -----------------------------------------------------------------------------
# LangSmith (Monitoring & Tracing)
# -----------------------------------------------------------------------------
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=project-name
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# -----------------------------------------------------------------------------
# Vector Database
# -----------------------------------------------------------------------------

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=your-index-name

# ChromaDB (local or hosted)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=your-collection

# -----------------------------------------------------------------------------
# Cloud Provider Settings
# -----------------------------------------------------------------------------

# GCP
GCP_BUCKET_NAME=your-gcp-bucket
FIRESTORE_DATABASE=default

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket
AWS_DYNAMODB_TABLE=your-dynamodb-table

# Azure
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection
AZURE_COSMOS_DB_ENDPOINT=your-cosmos-db-endpoint
AZURE_COSMOS_DB_KEY=your-cosmos-db-key

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_HOST=0.0.0.0
APP_PORT=8080
APP_WORKERS=4
APP_RELOAD=true

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Session & Security
SECRET_KEY=your-secret-key-generate-random
SESSION_TIMEOUT_MINUTES=30

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# -----------------------------------------------------------------------------
# External APIs (if applicable)
# -----------------------------------------------------------------------------
EXTERNAL_API_KEY=your-external-api-key
EXTERNAL_API_ENDPOINT=https://api.external-service.com

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_CACHING=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=false
